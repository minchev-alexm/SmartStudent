@using System.Security.Claims


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>SmartStudent - Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="/">SmartStudent</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i
                class="fas fa-bars"></i></button>
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="me-2 text-white fw-normal">@User.FindFirstValue(ClaimTypes.Name)</span>
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/Config/Settings">Settings</a></li>

                    <li><hr class="dropdown-divider" /></li>
<form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">@Html.AntiForgeryToken()<button type="submit" class="dropdown-item">Logout</button></form>
                </ul>
            </li>
        </ul>
    </nav>

   <!-- Sidebar -->
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Home</div>
                        <a class="nav-link" href="/">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Transaction</div>
                        <a class="nav-link" href="/Transaction/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                            Transactions
                        </a>
                        <a class="nav-link" href="/Budget/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-wallet"></i></div>
                            Budget
                        </a>

                        <div class="sb-sidenav-menu-heading">Configuration</div>
                        <a class="nav-link" href="/Config/Categories">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Categories
                        </a>
                        <a class="nav-link active" href="/Config/Settings">
                            <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                            Settings
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <!-- Page Header -->
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h1 class="mt-4 mb-0 fs-2">Settings</h1>
                    </div>

                    <div class="row">
                        <!-- Account Settings Card -->
                        <div class="col-xl-4 col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">Account Settings</div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" value="@User.FindFirstValue(ClaimTypes.Name)">
                                    </div>

                                     <div class="mb-2">
                                        <label class="form-label">Email</label>
                                        <input type="text" class="form-control" value="@User.FindFirstValue(ClaimTypes.Email)">
                                    </div>
                                    
                                    <button class="btn btn-primary mt-2">Update Account</button>
                                </div>
                            </div>
                        </div>

                        <!-- Preferences Card -->
                        <div class="col-xl-4 col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">Preferences</div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <label class="form-label">Theme</label>
                                        <select class="form-select">
                                            <option>Light</option>
                                            <option>Dark</option>
                                        </select>
                                    </div>
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="checkbox" value="" id="notificationsCheck" checked>
                                        <label class="form-check-label" for="notificationsCheck">
                                            Enable Notifications
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Security Card -->
                        <div class="col-xl-4 col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">Security</div>
                                <div class="card-body">
                                    <button class="btn btn-warning mb-2 w-100">Change Password</button>
                                    <button class="btn btn-danger w-100">Delete Account</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small text-muted">
                        &copy; 2025 SmartStudent. All rights reserved.
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
</body>

</html>
