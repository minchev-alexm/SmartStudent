@using System.Security.Claims
@model SmartStudent.Models.Budget

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>SmartStudent - Add Budget</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />

    <!-- Custom Styles -->
    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Flatpickr (optional date picker if needed) -->
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>

<body class="sb-nav-fixed">
    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="/">SmartStudent</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                    <span class="me-2 text-white fw-normal">@User.FindFirstValue(ClaimTypes.Name)</span>
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/Config/Settings">Settings</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Home</div>
                        <a class="nav-link" href="/">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Transaction</div>
                        <a class="nav-link" href="/Transaction/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                            Transactions
                        </a>
                        <a class="nav-link" href="/Budget/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-wallet"></i></div>
                            Budget
                        </a>

                        <div class="sb-sidenav-menu-heading">Configuration</div>
                        <a class="nav-link" href="/Config/Categories">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Categories
                        </a>
                        <a class="nav-link" href="/Config/Settings">
                            <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                            Settings
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 fs-2">Add Budget</h1>

                    <div class="card mt-4">
                        <div class="card-header d-flex align-items-center">
                            <div>
                                <i class="fas fa-plus me-2"></i>New Budget
                            </div>
                            <a href="/Budget/Index" class="btn btn-secondary btn-sm ms-auto" style="font-size: 0.93rem; padding: 0.35rem 0.65rem;">
                                Back to Budget
                            </a>
                        </div>

                        <div class="card-body">
                           <form asp-action="Add" method="post" class="row g-3">
    @Html.AntiForgeryToken()
     <input type="hidden" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

    <!-- Category Select -->
    <div class="col-12">
        <label asp-for="Category" class="form-label">Category</label>
        <select asp-for="Category" class="form-select" asp-items="ViewBag.CategoryList">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Planned Budget -->
    <div class="col-12">
        <label asp-for="Planned" class="form-label">Planned Budget</label>
        <input asp-for="Planned" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Planned" class="text-danger"></span>
    </div>

    <!-- Actual Spending -->
    <div class="col-12">
        <label asp-for="Actual" class="form-label">Actual Spending</label>
        <input asp-for="Actual" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Actual" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Add Budget</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

                        </div>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small text-muted">
                        &copy; 2025 SmartStudent. All rights reserved.
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Optional: flatpickr if you want date fields
            flatpickr("#transactionDate", {
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d/m/Y",
                defaultDate: "today",
                allowInput: true
            });
        });
    </script>
</body>
</html>
