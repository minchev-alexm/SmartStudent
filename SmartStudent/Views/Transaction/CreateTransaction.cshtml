@using System.Security.Claims
@model SmartStudent.Models.Transaction

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>SmartStudent - Add Transaction</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

    <!-- Custom Styles -->
    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

</head>

<body class="sb-nav-fixed">
    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="/">SmartStudent</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                    <span class="me-2 text-white fw-normal">@User.FindFirstValue(ClaimTypes.Name)</span>
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/Config/Settings">Settings</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Home</div>
                        <a class="nav-link" href="/">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Transaction</div>
                        <a class="nav-link" href="/Transaction/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                            Transactions
                        </a>
                        <a class="nav-link" href="/Budget/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-wallet"></i></div>
                            Budget
                        </a>

                        <div class="sb-sidenav-menu-heading">Configuration</div>
                        <a class="nav-link" href="/Config/Categories">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Categories
                        </a>
                        <a class="nav-link" href="/Config/Settings">
                            <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                            Settings
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 fs-2">Add Transaction</h1>

                    <div class="card mt-4">
                        <div class="card-header d-flex align-items-center">
                            <div>
                                <i class="fas fa-plus me-2"></i>
                                New Transaction
                            </div>
                            <a href="/Transaction/Index" style="font-size: 0.93rem; padding: 0.35rem 0.65rem;" class="btn btn-secondary btn-sm ms-auto">
                                Back to Transactions
                            </a>
                        </div>

                        <div class="card-body">
                            <form asp-action="CreateTransaction" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()

                             <div class="mb-3 row">
    <label class="col-sm-3 col-form-label">Date</label>
    <div class="col-sm-9">
        <input asp-for="Date" class="form-control" id="transactionDate" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
</div>


                                <div class="mb-3 row">
                                    <label class="col-sm-3 col-form-label">Type</label>
                                    <div class="col-sm-9">
                                        <select asp-for="Type" class="form-select">
                                            <option value="">Select Type</option>
                                            <option>Income</option>
                                            <option>Expense</option>
                                        </select>
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label class="col-sm-3 col-form-label">Category</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Category" class="form-control" />
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label class="col-sm-3 col-form-label">Amount</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </div>
                                </div>

                              <div class="mb-3 row">
    <label class="col-sm-3 col-form-label">Document</label>
    <div class="col-sm-9">
        <input asp-for="DocumentFile" class="form-control" type="file" />
        <span asp-validation-for="DocumentFile" class="text-danger"></span>
    </div>
</div>


                                <div class="text-end">
                                    <button type="submit" style="font-size: 0.93rem; padding: 0.35rem 0.65rem;" class="btn btn-primary btn-sm">Add Transaction</button>
                                    <a href="/Transaction/Index" style="font-size: 0.93rem; padding: 0.35rem 0.65rem;" class="btn btn-secondary btn-sm ms-2">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small text-muted">
                        &copy; 2025 SmartStudent. All rights reserved.
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>


<script>
    document.addEventListener("DOMContentLoaded", function () {
      flatpickr("#transactionDate", {
    dateFormat: "Y-m-d",
    altInput: true,
    altFormat: "d/m/Y",
    defaultDate: "today",
    allowInput: true
});

    });
</script>
