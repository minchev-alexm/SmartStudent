@using System.Security.Claims
@model SmartStudent.Models.Transaction

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>SmartStudent - Transaction Details</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    
    <!-- Custom Styles -->
    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="/">SmartStudent</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                    <span class="me-2 text-white fw-normal">@User.FindFirstValue(ClaimTypes.Name)</span>
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/Config/Settings">Settings</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Home</div>
                        <a class="nav-link" href="/">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Transaction</div>
                        <a class="nav-link active" href="/Transaction/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                            Transactions
                        </a>
                        <a class="nav-link" href="/Budget/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-wallet"></i></div>
                            Budget
                        </a>

                        <div class="sb-sidenav-menu-heading">Configuration</div>
                        <a class="nav-link" href="/Config/Categories">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Categories
                        </a>
                        <a class="nav-link" href="/Config/Settings">
                            <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                            Settings
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h1 class="fs-2 mb-0">Transaction Details</h1>
        <a href="/Transaction/Index"
           class="btn btn-secondary btn">
            Back to Transactions
        </a>
    </div>

    <!-- Transaction Card -->
    <div class="card mt-4">
        <div class="card-header d-flex align-items-center">
            <div>
                <i class="fas fa-receipt me-2"></i>
                Transaction Information
            </div>

            <div class="ms-auto d-flex gap-2">
                <a asp-controller="Transaction"
                   asp-action="EditTransaction"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary btn-sm"
                   style="font-size: 0.93rem; padding: 0.35rem 0.65rem;">
                    Edit
                </a>

                <form asp-controller="Transaction"
                      asp-action="DeleteTransaction"
                      asp-route-id="@Model.Id"
                      method="post"
                      class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm"
                            style="font-size: 0.93rem; padding: 0.35rem 0.65rem;">
                        Delete
                    </button>
                </form>
            </div>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9 fw-bold @(Model.Type == "Income" ? "text-success" : "text-danger")">
                    @Model.Type
                </dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-3">Document</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.DocumentPath))
                    {
                        <a href="@Url.Content(Model.DocumentPath)" target="_blank">View Document</a>
                    }
                    else
                    {
                        <span class="text-muted">No document attached</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>

            </main>

            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small text-muted">
                        &copy; 2025 SmartStudent. All rights reserved.
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
