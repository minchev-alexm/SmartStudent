<!-- Floating toggle button -->
<button id="chatToggleBtn" style="
    position:fixed;
    bottom:30px;   /* distance from bottom */
    right:30px;    /* distance from right */
    z-index:1060;
    background-color:#343a40;
    color:white;
    border:none;
    border-radius:50%;
    width:55px;
    height:55px;
    font-size:1.5rem;
    cursor:pointer;
    box-shadow:0 4px 10px rgba(0,0,0,0.2);
">
    <i class="fas fa-robot"></i>
</button>


<script>


    const chatbotPanel = document.getElementById("chatbotPanel");
const chatToggleBtn = document.getElementById("chatToggleBtn");
const chatCloseBtn = document.getElementById("chatCloseBtn");

chatToggleBtn.addEventListener("click",()=>{ 
    chatbotPanel.style.transform="translateX(0)";
    chatToggleBtn.style.display="none";
});
chatCloseBtn.addEventListener("click",()=>{
    chatbotPanel.style.transform="translateX(200%)";
    chatToggleBtn.style.display="block";
});

const chatWindow=document.getElementById("chatWindow");
const appendMessage=(role,content)=>{
    const msgDiv=document.createElement('div');
    msgDiv.innerHTML=`<b>${role}:</b> ${content}`;
    chatWindow.appendChild(msgDiv);
    chatWindow.scrollTop=chatWindow.scrollHeight;
};

document.getElementById("sendBtn").addEventListener("click", async function () {
    const input = document.getElementById("chatInput");
    const message = input.value.trim();
    if (!message) return;

    const chatWindow = document.getElementById("chatWindow");

    const appendMessage = (role, content) => {
        const msgDiv = document.createElement('div');
        msgDiv.innerHTML = `<b>${role}:</b> ${content}`;
        chatWindow.appendChild(msgDiv);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    };

    appendMessage('You', message);
    input.value = '';

    try {
        const res = await fetch('/api/Chatbot/SendMessage', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ UserMessage: message })
        });

        const data = await res.json();
        let aiMessage = data.aiMessage || '';

        aiMessage = aiMessage
            .split('\n')
            .filter(line => line.trim() !== ''
                && !line.toLowerCase().startsWith('you:'))
            .join('\n');

        aiMessage = aiMessage.replace(/^(SmartStudent|Assistant):\s*/, '').trim();
        aiMessage = aiMessage.replace(/^[,?!.]+/, '').trim();
        aiMessage = aiMessage.replace(/\n{2,}/g, '\n');

        const MAX_LENGTH = 2000;
        if (aiMessage.length > MAX_LENGTH) {
            aiMessage = aiMessage.substring(0, MAX_LENGTH) + '...';
        }

         const renderer = { code: () => '' };
    marked.use({ renderer });
        const renderedMessage = marked.parse(aiMessage);

        appendMessage('AI', renderedMessage);

    } catch (err) {
        appendMessage('AI', 'Error contacting AI.');
        console.error(err);
    }
});
</script>

<script>
